  <pattern>showme</pattern>
    <script>
      //This is for testing (I 'borrowed' it from Inform)
	  msg ("Objects in your location:")
      msg (GetAllChildObjects (game.pov.parent))
    </script>
    </command>
	<!-- COMMAND ADDED BY RICHARD HEADKID ENDS -->
</library>
